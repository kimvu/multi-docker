{
    "AWSEBDOckerrunVersion": 2,
    "containerDefiniations":[
        {
            "name": "client",
            "image": "kimlvu/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "kimlvu/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "kimlvu/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "kimlvu/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"]
        }
    ]
}